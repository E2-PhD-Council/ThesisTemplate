% =========================================================================================================
% Appendix styling 
% =========================================================================================================
\newcounter{savetocdepth}

% Define how title looks like (this redefines how it is linked , so one needs to rewrite the text Appendix when it is refed)
\newcommand\appendixpreamble{
	\appendices
	\def\thesectiondis{\alph{\thesectiondis}.} 
	\renewcommand\thesection{Appendix~\Alph{section}}
	\def\thesubsectiondis{\alph{\thesubsectiondis}.} 
	\renewcommand\thesubsection{\Alph{section}.\alph{subsection}}
}

% Define what to put in toc for section inside appendix and how to put it
\newcommand{\appendixsection}[1]{
  \addtocontents{toc}{\protect\setcounter{savetocdepth}{\value{tocdepth}}}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{0}}
  \section{#1}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{1}}
  \phantomsection
  \addcontentsline{toc}{section}{Appendix \Alph{section} - #1}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{\value{savetocdepth}}}
}

% Define what to put in toc for subsection inside appendix and how to put it
\newcommand{\appendixsubsection}[1]{
  \addtocontents{toc}{\protect\setcounter{savetocdepth}{\value{tocdepth}}}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{0}}
  \subsection{#1}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{2}}
  \phantomsection
  \addcontentsline{toc}{subsection}{\Alph{section}.\arabic{subsection} - #1}
  \addtocontents{toc}{\protect\setcounter{tocdepth}{\value{savetocdepth}}}
}


